@model SignupDto

@{
    ViewData["Title"] = "Sign up";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Kaydol</h2>
            <form method="post" asp-action="Signup">
                <div class="mb-3">
                    <label for="firstName" class="form-label">Ad</label>
                    <input type="text" class="form-control" id="firstName" name="firstName"
                           placeholder="Adınızı giriniz" required>
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Soyad</label>
                    <input type="text" class="form-control" id="lastName" name="lastName"
                        placeholder="Soyadınızı giriniz" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="202103011000@dogus.edu.tr"
                        required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="15+ karakter giriniz" required>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Şifreyi Tekrarlayın</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                           placeholder="Şifreyi Tekrarlayın" required>
                </div>
                
                <button type="submit" style="background-color: #4169e1" class="btn btn-success ">Kaydol</button>
            </form>
        </div>
    </div>
</div>
