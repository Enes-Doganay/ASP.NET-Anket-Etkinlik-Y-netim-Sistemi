@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center py-3 border-bottom">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Hoşgeldiniz!</h2>
            <div>
                <div class="text-danger" asp-validation-summary="All"></div>
            </div>

            <form method="post" asp-action="Login">

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email"
                        placeholder="202103011000@dogus.edu.tr" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="Şifrenizi giriniz" required>
                </div>
                <button type="submit" style="background-color: #4169e1" class="btn btn-success">Giriş Yap</button>
            </form>
            <div class="mt-3">
                <a asp-action="ForgotPassword">Şifreni mi unuttun?</a>
            </div>
        </div>
    </div>
    <div class="mt-3 fw-bold text-center">
        Hesabın yok mu?
        <a asp-controller="Account" asp-action="Signup">Kaydol</a>
    </div>
</div>
